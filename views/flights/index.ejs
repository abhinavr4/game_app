<% include ../partials/header.ejs %>

<div class="container">
    <div class="jumbotron">
        <h1>Welcome To das Flugzeug</h1>
        <p>View our amazing air travel options!</p>
    </div>
</div>
  
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Notifications</p>
            <div class="list-group">
                <li class="list-group-item active">Connecting flights coming soon!</li>
                <li class="list-group-item">International flights starting in June!</li>
                <li class="list-group-item">Best prices, Premium experience.</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="well">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Flight Origin</th>
                            <th>Flight Duration</th>
                            <th>Flight Destination</th>
                            <th>Departure Time</th>
                            <th>Arrival Time</th>
                            <th>Price</th>
                        </tr>
                    </thead>
                    <% flights.forEach(function(flight){ %>  
                        <tbody>
                            <tr>
                                <td><%=flight.origin%></td>
                                <td><%=flight.duration%></td>
                                <td><%=flight.destination%></td>
                                <td><%=flight.depTime%></td>
                                <td><%=flight.arrTime%></td>
                                <td>â‚¹ <%=flight.price%></td>
                                <td class="text-right">
                                    <a class="btn btn-success btn-xs" href="/flights/<%= flight._id %>">Select</a>
                                </td>
                            </tr>
                        </tbody>                       
                    <% }); %>
                </table>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer.ejs %>